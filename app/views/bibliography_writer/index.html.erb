<div class="bibliography-container">
  <header>
    <h1>Bibliography Writer</h1>
    <p>Create and manage citations for your research papers.</p>
  </header>

  form class="bibliography-form">
    <div class="form-group">
      <label for="citation-type">Citation Type:</label>
      <select id="citation-type" name="citation_type">
        <option value="mla">MLA</option>
        <option value="apa">APA</option>
        <option value="chicago">Chicago</option>
      </select>
    </div>

    <div class="form-group">
      <label for="source">Source:</label>
      <input type="text" id="source" name="source" placeholder="Enter book, article, or website">
    </div>

    <div class="form-group">
      <label for="author">Author:</label>
      <input type="text" id="author" name="author" placeholder="Author name">
    </div>

    <div class="form-group">
      <label for="publication-date">Publication Date:</label>
      <input type="date" id="publication-date" name="publication_date">
    </div>

    <button type="submit" class="btn">Generate Citation</button>
  </form>
</div>



