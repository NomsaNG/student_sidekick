<body>
  <div class="dashboard">
    <header class="dashboard-header">
      <h1>Dashboard</h1>
      <span>Overview</span>
    </header>

<div class="cards">
  <%= link_to '/document_summarizer', class: 'card summary' do %>
    <div>
      <h3>Document summarisation</h3>
      <p><strong>20 files uploaded</strong></p>
      <span>Increased by 5%</span>
    </div>
  <% end %>

  <%= link_to new_bibliography_writer_path, class: 'card citations' do %>
    <div>
      <h3>Icons</h3>
      <p><strong>Generated 10 Citations</strong></p>  
      <span>Decreased by 10%</span>
    </div>
  <% end %>

  <%= link_to 'http://localhost:8501', class: 'card plagiarism' do %>
    <div>
      <h3>Plagiarism detector</h3>
      <p><strong>10% plagiarism detected</strong></p>
      <span>Increased by 5%</span>
    </div>
  <% end %>
</div>

    <div class="stats">
      <div class="user-stats">
        <h3>User Statistics</h3>
        <div class="bar-chart">
          <%= image_tag 'graph.jpg', alt: 'graph', class: 'graph' %>
        </div>
      </div>
      <div class="research-progress">
        <h3>Research Progress</h3>
        <div class="pie-chart">
          <%= image_tag 'pie-chart.jpg', alt: 'Piechart', class: 'piechart' %>
        </div>
      </div>
    </div>
  </div>
</body>
</html>


<style>
.dashboard {
  max-width: 1200px;
  margin: auto;
}

.dashboard-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.dashboard-header h1 {
  font-size: 24px;
  color: #555;
}

.dashboard-header span {
  font-size: 14px;
  color: #888;
}

.cards {
  display: flex;
  gap: 20px;
  margin-bottom: 20px;
}

.card {
  flex: 1;
  padding: 20px;
  border-radius: 8px;
  color: #fff;
  position: relative;
}

.card h3 {
  font-size: 16px;
}

.card p {
  font-size: 24px;
  font-weight: bold;
}

.card span {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.8);
  position: absolute;
  bottom: 15px;
  right: 20px;
}

.summary {
  background: linear-gradient(135deg, #ff6b6b, #f37f7f);
}

.citations {
  background: linear-gradient(135deg, #00b4d8, #48cae4);
}

.plagiarism {
  background: linear-gradient(135deg, #00b69c, #34e2b8);
}

.stats {
  display: flex;
  gap: 20px;
}

.user-stats, .research-progress {
  flex: 1;
  padding: 20px;
  background-color: #fff;
  border-radius: 8px;
}

.bar-chart img, .pie-chart img {
  max-width: 100%;
  height: auto;
  display: block;
  border-radius: 8px;
}


.graph, .piechart {
  max-width: 100%;
  height: auto;
  display: block;
  border-radius: 8px;
}


.user-stats h3, .research-progress h3 {
  font-size: 16px;
  color: #555;
  margin-bottom: 15px;
}

.bar-chart, .pie-chart {
  background-color: #f1f3f5;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #bbb;
  font-size: 14px;
}

.cards .card {
  text-decoration: none;
  color: white;

}

.cards .card:hover {
  background-color: #f0f0f0;
}

</style>
