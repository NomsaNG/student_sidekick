<!-- app/views/bibliography_writers/new.html.erb -->
<div class="bibliography-container">
  <header>
    <h1>Bibliography Writer</h1>
    <p>Create and manage citations for your research papers.</p>
  </header>

  <%= form_with model: @bibliography_writer, url: bibliography_writers_path, local: true, html: { class: "bibliography-form" } do |f| %>
    <div class="form-group">
      <%= f.label :citation_style, "Citation Type:" %>
      <%= f.select :citation_style, options_for_select([["MLA", "mla"], ["APA", "apa"], ["Chicago", "chicago"]]) %>
    </div>

    <div class="form-group">
      <%= f.label :source, "Source:" %>
      <%= f.text_field :source, placeholder: "Enter book, article, or website" %>
    </div>

    <div class="form-group">
      <%= f.label :author, "Author:" %>
      <%= f.text_field :author, placeholder: "Author name" %>
    </div>

    <div class="form-group">
      <%= f.label :publication_date, "Publication Date:" %>
      <%= f.date_field :publication_date %>
    </div>

    <%= f.submit "Generate Citation", class: "btn" %>
  <% end %>
</div>
